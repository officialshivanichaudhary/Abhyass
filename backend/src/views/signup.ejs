<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Signup — Abhyass (Light)</title>
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <style>
    /* Light theme styles - keeps same layout & IDs as your original */
    :root{
      --bg-top: #e7f9fc;
      --bg: #ffffff;
      --muted: #4b5563;
      --card: #ffffff;
      --input-bg: #f8fafc;
      --primary-from: #06b6d4;
      --primary-to: #3b82f6;
      --dark-border: rgba(2,6,23,0.06);
    }

    *{box-sizing:border-box}
    body{
      font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
      margin:0;
      background: linear-gradient(180deg,#f8feff 0%, #47b1c9 50%, #ffffff 100%);
      color: #042433;
      -webkit-font-smoothing:antialiased;
      -moz-osx-font-smoothing:grayscale;
    }

    .wrap{
      max-width:720px;
      margin:32px auto;
      padding:20px;
      background: rgba(255,255,255,0.6);
      border-radius:12px;
      box-shadow: 0 10px 30px rgba(7,22,34,0.06);
      border: 1px solid var(--dark-border);
      backdrop-filter: blur(6px);
    }

    h2{margin:0 0 8px;font-size:1.6rem;color:#062a37}
    .muted{color:var(--muted);font-size:.95rem}

    label{display:block;margin:12px 0 6px;color:#324d57;font-weight:600}
    input,select{
      width:100%;
      padding:10px 12px;
      border-radius:8px;
      border:1px solid var(--dark-border);
      background: var(--input-bg);
      color:#042433;
      font-size:1rem;
      outline:none;
      transition: box-shadow .15s ease, border-color .15s ease;
    }
    input:focus, select:focus { box-shadow: 0 6px 18px rgba(3,105,161,0.08); border-color: rgba(3,105,161,0.16); }

    .btn{
      margin-top:14px;
      background: linear-gradient(90deg,var(--primary-from),var(--primary-to));
      padding:10px 16px;
      border-radius:999px;
      border:none;
      color:white;
      cursor:pointer;
      font-weight:700;
      width:100%;
    }
    .btn.secondary{ background:#111827; width:100%; color:#fff; border-radius:999px; padding:10px 16px; }

    .row{display:flex;gap:10px;margin-top:10px}
    .row .half{flex:1}
    .hidden{display:none}
    .small{font-size:.92rem;color:var(--muted);margin-top:8px}

    /* responsive */
    @media (max-width:520px){
      .row{flex-direction:column}
      .wrap{margin:18px;padding:14px}
    }
  </style>
</head>
<body>
  <div class="wrap">
    <h2>Sign up</h2>
    <p class="muted">Start by verifying your email. We'll send a 6-digit OTP.</p>

    <form id="otpForm">
      <label for="email">Email</label>
      <input id="email" name="email" type="email" required placeholder="you@example.com" />

      <div class="row">
        <button id="sendOtpBtn" type="button" class="btn half">Send OTP</button>
        <button id="clearBtn" type="button" class="btn secondary half">Clear</button>
      </div>
    </form>

    <div id="verifyArea" class="hidden" style="margin-top:18px">
      <label for="otpInput">Enter OTP</label>
      <input id="otpInput" name="otp" inputmode="numeric" placeholder="6-digit code" />
      <div class="row">
        <button id="verifyBtn" class="btn half">Verify OTP</button>
        <button id="resendBtn" class="btn secondary half">Resend</button>
      </div>
    </div>

    <!-- password + profile fields appear only after OTP verified -->
    <form id="signupForm" class="hidden" style="margin-top:18px">
      <label for="name">Name</label>
      <input id="name" name="name" required placeholder="Your full name" />

      <label for="password">Password</label>
      <input id="password" name="password" type="password" minlength="6" required placeholder="Create a password (min 6 chars)" />

      <label for="grade">Grade</label>
      <select id="grade" name="grade">
        <option value="5">5</option>
        <option value="6" selected>6</option>
        <option value="7">7</option>
        <option value="8">8</option>
        <option value="9">9</option>
        <option value="10">10</option>
      </select>

      <button class="btn" type="submit">Complete Sign up</button>
      <p class="small muted">By signing up you agree to our terms and privacy policy.</p>
    </form>

    <p class="muted small">Already have account? <a href="/login?role=student">Login</a></p>
  </div>

<script>
  // Keep original endpoints and behaviour intact; only adapted UI logic to match elements
  const sendOtpBtn = document.getElementById('sendOtpBtn');
  const clearBtn = document.getElementById('clearBtn');
  const verifyArea = document.getElementById('verifyArea');
  const verifyBtn = document.getElementById('verifyBtn');
  const resendBtn = document.getElementById('resendBtn');
  const signupForm = document.getElementById('signupForm');
  const otpForm = document.getElementById('otpForm');

  // helper: show/hide
  function showVerifyArea(show){
    verifyArea.classList.toggle('hidden', !show);
  }
  function showSignupForm(show){
    signupForm.classList.toggle('hidden', !show);
  }

  // send OTP -> calls original endpoint
  async function sendOtp() {
    const email = document.getElementById('email').value.trim();
    if (!email) { alert('Email required'); return; }
    try {
      const res = await fetch('/api/auth/send-otp', {
        method: 'POST',
        headers: {'Content-Type':'application/json'},
        body: JSON.stringify({ email })
      });
      const j = await res.json();
      if (!res.ok || !j.success) {
        alert(j.message || 'OTP send failed');
        return;
      }
      // Show verify area (original behaviour)
      showVerifyArea(true);
      alert('OTP sent (check mail or server logs in dev).');
    } catch (e) {
      console.error(e);
      alert('Network error while sending OTP.');
    }
  }

  // verify OTP -> uses otpInput id (keeps existing endpoint and flow)
  async function verifyOtp() {
    const email = document.getElementById('email').value.trim();
    const code = document.getElementById('otpInput').value.trim();
    if (!email || !code) { alert('Email & OTP required'); return; }
    try {
      const res = await fetch('/api/auth/verify-otp', {
        method: 'POST',
        headers: {'Content-Type':'application/json'},
        body: JSON.stringify({ email, code })
      });
      const j = await res.json();
      if (!res.ok || !j.success) {
        alert(j.message || 'Invalid OTP');
        return;
      }
      // OTP verified — show password fields (original behaviour)
      showSignupForm(true);
      // Optionally hide verify area:
      showVerifyArea(false);
      alert('OTP verified — now set password and complete signup');
    } catch (e) {
      console.error(e);
      alert('Network error while verifying OTP.');
    }
  }

  // resend handler -> same endpoint as sendOtp (keeps behaviour)
  async function resendOtp() {
    // We simply call sendOtp again; you can add any throttle logic here if server requires
    await sendOtp();
  }

  // clear form
  function clearForm() {
    document.getElementById('email').value = '';
    document.getElementById('otpInput').value = '';
    document.getElementById('name').value = '';
    document.getElementById('password').value = '';
    document.getElementById('grade').value = '6';
    showVerifyArea(false);
    showSignupForm(false);
  }

  // signup submission -> uses existing form (this was not fully defined in original; we keep typical behaviour)
  document.getElementById('signupForm').addEventListener('submit', async function(e){
    e.preventDefault();
    const payload = {
      name: document.getElementById('name').value.trim(),
      email: document.getElementById('email').value.trim(),
      password: document.getElementById('password').value,
      grade: document.getElementById('grade').value
    };
    if (!payload.name || !payload.email || !payload.password) {
      alert('Please complete all fields');
      return;
    }
    try {
      const res = await fetch('/api/auth/student/register', {
        method: 'POST',
        headers: {'Content-Type':'application/json'},
        body: JSON.stringify(payload)
      });
      const j = await res.json();
      if (!res.ok || !j.success) {
        alert(j.message || 'Signup failed');
        return;
      }
      alert('Signup successful — redirecting to dashboard...');
      // preserve original logic: set token and redirect if provided
      localStorage.setItem('token', j.token || '');
      window.location.href = '/dashboard/student';
    } catch (err) {
      console.error(err);
      alert('Network error during signup.');
    }
  });

  // wire buttons (keeps behaviour names consistent)
  sendOtpBtn.addEventListener('click', sendOtp);
  verifyBtn.addEventListener('click', function(e){ e.preventDefault(); verifyOtp(); });
  resendBtn.addEventListener('click', function(e){ e.preventDefault(); resendOtp(); });
  clearBtn.addEventListener('click', function(e){ e.preventDefault(); clearForm(); });

  // initialize: hide areas (same as original)
  showVerifyArea(false);
  showSignupForm(false);
</script>

</body>
</html>
