  <script>
    /* Make scroller seamless: duplicate children if container width is larger than content so animation looks continuous.
       This JS only enhances UX; it doesn't change any routes/behavior.
       Note: tool-card pointer-events are disabled above so cards are not clickable (user request). */
    (function(){
      const inner = document.querySelector('.scroller-inner');
      if (!inner) return;

      // Duplicate content until the scroll area is at least 2x viewport (prevents gaps)
      const ensureLoop = () => {
        const outerWidth = inner.parentElement.clientWidth;
        // compute inner width
        const innerWidth = Array.from(inner.children).reduce((w, el) => w + el.getBoundingClientRect().width + 16, 0);
        // if inner content is smaller than 1.8x outer, duplicate once to make continuous feeling
        if (innerWidth < outerWidth * 1.8) {
          const children = Array.from(inner.children).map(c => c.cloneNode(true));
          children.forEach(c => inner.appendChild(c));
        }
      };

      window.addEventListener('load', ensureLoop);
      window.addEventListener('resize', () => {
        clearTimeout(window._scrolldeb);
        window._scrolldeb = setTimeout(ensureLoop, 200);
      });
    })();
