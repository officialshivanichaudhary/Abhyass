    .explore-sub { color:var(--muted); font-size:0.95rem; margin-bottom:12px; }

    .scroller-outer {
      width:100vw; /* full page width as requested */
      margin-left: calc(50% - 50vw); /* make full-bleed */
      position:relative;
      overflow:hidden;
      padding:12px 0;
